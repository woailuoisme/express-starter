{
  "extends": [
    "standard",
    "prettier",
    "prettier/standard"
  ],
  "plugins": [
    "babel",
    "import",
    "prettier",
    "standard"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "ecmaFeatures": {
    "classes": true
  },
  "rules": {
    "no-unused-vars": "warn",
    "spaced-comment": "warn",
    "space-before-function-paren": 0,
    "new-cap": 0,
    "prettier/prettier": 1
  }
}
